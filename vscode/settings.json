// Place your settings in this file to overwrite the default settings
{
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Monokai",
    "workbench.iconTheme": "vscode-icons",

    // editor
    "editor.fontSize": 13,
    "editor.wordWrapColumn": 150,
    "editor.fontFamily": "'Hack', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": true,

    // minimap
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 120,

    // Markdown Toc configuration
    "markdown-toc.depthFrom": 2,
    "markdown-toc.depthTo": 6,
    "markdown-toc.insertAnchor": false,
    "markdown-toc.withLinks": true,
    "markdown-toc.orderedList": false,
    "markdown-toc.updateOnSave": true,
    "markdown-toc.anchorMode": "github.com",
    
    "vsicons.dontShowNewVersionMessage": true
    
}
